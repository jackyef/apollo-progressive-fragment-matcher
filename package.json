{
  "name": "node-contrib-boilerplate",
  "version": "1.0.0",
  "private": false,
  "description": "A boilerplate for node-focused open-source libraries.",
  "license": "MIT",
  "author": "Lucas Constantino Silva <lucasconstantinosilva@gmail.com>",
  "main": "index.js",
  "scripts": {
    "lint": "eslint src",
    "precommit": "lint-staged",
    "prepush": "yarn qa",
    "qa": "yarn test && yarn lint",
    "test": "jest src"
  },
  "lint-staged": {
    "*.js": [
      "prettier-eslint --write",
      "git add"
    ],
    "package.json": [
      "sort-package-json",
      "git add"
    ]
  },
  "devDependencies": {
    "eslint": "^5.14.1",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "lint-staged": "^8.1.4",
    "prettier-eslint-cli": "^4.7.1",
    "sort-package-json": "^1.19.0"
  }
}
